<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:demo="urn:import:gmd.addins.demo.client.application.widget">

    <ui:with field="res" type="gmd.datatable.demo.client.resources.AppResources"/>

    <m:MaterialPanel>
        <m:MaterialHeader layoutPosition="FIXED" width="100%" top="0" depth="999">
            <m:MaterialNavBar  ui:field="navBar" activates="right-sidenav" backgroundColor="WHITE">
                <m:MaterialPanel containerEnabled="true">
                    <m:MaterialNavBrand fontSize="1.2em">
                        <m:MaterialImage url="https://i.imgur.com/bO2kFKs.png" alt="logo" float="LEFT" width="60px"/>
                        <m:MaterialPanel>
                            <m:MaterialLabel text="gwt-material-table" fontWeight="BOLD" lineHeight="24" marginTop="12"/>
                            <m:MaterialLabel text="Version 2.3" lineHeight="12" fontSize="0.6em"/>
                        </m:MaterialPanel>
                    </m:MaterialNavBrand>
                    <m:MaterialNavSection ui:field="navSection" float="RIGHT" />
                    <m:MaterialDarkModeToggle float="RIGHT"/>
                </m:MaterialPanel>
            </m:MaterialNavBar>


        </m:MaterialHeader>

        <m:MaterialSideNavPush ui:field="sidenav" m:id="right-sidenav" edge="RIGHT" width="300">
            <m:MaterialSideNavContent ui:field="sideContent" />
        </m:MaterialSideNavPush>

        <m:MaterialContainer paddingTop="64" addStyleNames="container">
            <m:MaterialRow padding="20">
                <m:MaterialPanel ui:field="mainContainer"/>
            </m:MaterialRow>
        </m:MaterialContainer>

        <m:MaterialFAB style="right: 10%; bottom: 5%;">
            <m:MaterialAnchorButton href="https://github.com/GwtMaterialDesign/gwt-material-addins" target="_blank" tooltip="Github Repository" tooltipPosition="LEFT" customIconType="fab fa-github" type="FLOATING" size="LARGE" backgroundColor="WHITE" iconColor="GREY_DARKEN_4"/>
        </m:MaterialFAB>
    </m:MaterialPanel>
</ui:UiBinder>
